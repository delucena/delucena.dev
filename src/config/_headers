# Cloudflare Pages Headers Configuration
# https://developers.cloudflare.com/pages/platform/headers/
# Otimizado para máxima performance e cache no Cloudflare

# HTML (documentos) - revalidar sempre (evita HTML \"preso\" em cache após deploy)
/
  Cache-Control: public, max-age=0, must-revalidate
  Vary: Accept-Encoding

/*.html
  Cache-Control: public, max-age=0, must-revalidate
  Vary: Accept-Encoding

# CSS (arquivos versionados por hash em /css/)
/css/*
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# JavaScript (arquivos versionados por hash em /js/)
/js/*
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# JSON (dados estáticos) - cache moderado com revalidação
/assets/i18n/*
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800
  Vary: Accept-Encoding

/data/*
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800
  Vary: Accept-Encoding

# Imagens (assets locais)
/assets/images/*
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# Fonts (se existirem)
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *
  Vary: Accept-Encoding

# Outros assets estáticos (ícones, etc.)
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# Security headers (globais) — evitar COEP \"require-corp\" para não quebrar imagens/recursos de terceiros
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload
  Cross-Origin-Opener-Policy: same-origin
  Vary: Accept-Encoding

  # Content Security Policy (otimizado para segurança e funcionalidade)
  # OBS: os hashes de scripts inline são injetados no build (substitui __SCRIPT_SHA256__).
  Content-Security-Policy: default-src 'self'; script-src 'self' __SCRIPT_SHA256__ https://static.cloudflareinsights.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; img-src 'self' data: https://img.shields.io https:; font-src 'self' data: https://cdnjs.cloudflare.com; connect-src 'self' https://static.cloudflareinsights.com https:; frame-ancestors 'none';
