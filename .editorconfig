# EditorConfig é útil para manter estilos de código consistentes
# entre diferentes editores e IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,json,yml,yaml}]
indent_size = 2

[*.{html,css}]
indent_size = 2

[*.java]
indent_size = 4
indent_style = space

[*.{sh,bash}]
indent_size = 2
end_of_line = lf

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[Makefile]
indent_style = tab

[*.{bat,cmd}]
end_of_line = crlf
